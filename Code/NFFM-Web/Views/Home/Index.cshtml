@{
    ViewBag.Title = "NFFM Web";
}

<div class="jumbotron">
    <h1>NFFM - Web Demo</h1>
    <h2>Receiving Bill of Lading Entry Form</h2>
</div>

<div class="row">
    <div class="col-md-7 search-bar">
        <div class="col-md-2">Received Date:</div>
        <div class="col-md-3"><input type="text" class="form-control" /></div>
        <div class="col-md-1"></div>

        <div class="col-md-2">Trucker Name:</div>
